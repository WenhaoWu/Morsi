<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wenhao.practice.morsi">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".a_loginAndRegi.Activity_Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".a_loginAndRegi.Activity_Register"
            android:label="@string/title_activity_activity__register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".b_UserAndGroup.View_activity_main"
            android:label="@string/title_activity_activity__all_user_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".c_Conversation.View_Activity_Conversation"></activity>
    </application>

</manifest>
